
@{
    ViewBag.Title = "RewardPrizeListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Reward Prize Listing</h5>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <button type="button" id="btnNew" onclick="AddNewPrize();" class="btn btn-block btn-grd-info"><i class="ion-plus-round"></i> Add Reward Prize</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblReward" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Status</th>
                                        <th>Item Code</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Product</th>
                                        <th>Reward Points<br /> Required</th>
                                        <th>Valid Till</th>
                                        <th>Unit Cost</th>
                                        <th>Suppiler</th>
                                        <th>Creation Date</th>
                                        <th>Quotation</th>
                                        <th>CreatedBy</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<div id="RewardPrizeModal">
    <div class="md-content">
        <div class="row">
            <div class="col-xl-2 col-lg-3 col-sm-3 col-xs-12">
                <p>Product</p>
                <img id="productphoto" src="@Url.Content("~/SystemImages/nophoto.jpg")" class="img-fluid m-b-10 img-product" alt="">
            </div>
            <div class="col-xl-2 col-lg-3 col-sm-3 col-xs-12">
                <p>Quotation</p>
                <img id="quotationphoto" src="@Url.Content("~/SystemImages/nophoto.jpg")" class="img-fluid m-b-10 img-product" alt="">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4">Status:</label>
            <div class="col-sm-8">
                <div class="form-radio">
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoInactive" type="radio" name="rdoStatus" value="0" checked>
                            <i class="helper"></i>In-active
                        </label>
                    </div>
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoActive" type="radio" name="rdoStatus" value="1" >
                            <i class="helper"></i>Active
                        </label>
                    </div>
                </div>
                <span class="messages"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Item Code:</label>
            <div class="col-sm-8">
                <input id="txtItemCode" type="text" maxlength="10" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Category:</label>
            <div class="col-sm-8">
                <select id="ddlCategory" class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Product Description:</label>
            <div class="col-sm-8">
                <input id="txtProductDescription" type="text" maxlength="400" class="form-control">
            </div>
        </div>
        @*<div class="form-group row">
            <label class="col-sm-4 col-form-label">Product Photo:</label>
            <div class="col-sm-8">
                <input type="file" class="form-control">
            </div>
        </div>*@
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Reward Points Required:</label>
            <div class="col-sm-8">
                <input id="txtPoints" type="text" maxlength="13" class="form-control point1 align-right">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Valid Till:</label>
            <div class="col-sm-8">
                <input id="txtValidTill" type="text" readonly class="form-control align-center">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Details:</label>
            <div class="col-sm-8">
                <input id="txtDetails" type="text" maxlength="1000" class="form-control">
            </div>
        </div>
        <div class="form-group row" style="margin-bottom:0px">
            <label class="col-sm-4 col-form-label">D-Link Unit Cost:<br /><span style="font-size:11px">(local Currency)</span></label>
            <div class="col-sm-8">
                <input id="txtUnitCost" type="text" maxlength="13" class="form-control point2 align-right">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name of Supplier:</label>
            <div class="col-sm-8">
                <input id="txtSupplierName" type="text" maxlength="100" class="form-control">
            </div>
        </div>
        @*<div class="form-group row">
            <label class="col-sm-4 col-form-label">Quotation:</label>
            <div class="col-sm-8">
                <input type="file" class="form-control">
            </div>
        </div>*@
        <div id="divSave" class="form-group row div-centerbtn">
            <div class="col-sm-3">
                <button type="button" id="btnClose" onclick="RewardPrizeClose();" class="btn btn-block btn-grd-inverse">Close</button>
            </div>
            <div class="col-sm-3">
                <button type="button" id="btnSave" onclick="RewardPrizeSave();" class="btn btn-block btn-grd-info"><span id="btnSaveText">Save</span></button>
            </div>
        </div>
    </div>
</div>

<input id="productupload" accept="image/*" class="hidden" type="file" onchange="readURL(this,'productphoto');">
<input id="quotationupload" accept="image/*" class="hidden" type="file" onchange="readURL(this,'quotationphoto');">

<input id="HMode" type="hidden" />
<input id="HImageLocation" type="hidden" value="@Url.Content("~/SystemImages/")" />
<input id="HGetProductCategory" type="hidden" value="@Url.Action("GetProductCategory", "api/ProductCategoryApi")" />
<input id="HGetRewardPrize" type="hidden" value="@Url.Action("GetRewardPrize", "api/RewardApi")" />
<input id="imgnophoto" type="hidden" value="@Url.Content("~/SystemImages/nophoto.jpg")" />
<input id="HRewardPrizeCUD" type="hidden" value="@Url.Action("RewardPrize_CUD", "Reward")" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/reward.js?v=9")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            RewardPrizeLoad();
        });
    </script>
}
