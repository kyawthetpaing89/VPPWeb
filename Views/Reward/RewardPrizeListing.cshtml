
@{
    ViewBag.Title = "RewardPrizeListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Reward Prize Listing</h5>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <button type="button" id="btnNew" onclick="AddNewPrize();" class="btn btn-block btn-grd-info"><i class="ion-plus-round"></i> Add Reward Prize</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblReward" class="table table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Status</th>
                                        <th>Item Code</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Product</th>
                                        <th>Reward Points Require</th>
                                        <th>Valid Till</th>
                                        <th>Unit Cost</th>
                                        <th>Suppiler</th>
                                        <th>Creation Date</th>
                                        <th>Quotation</th>
                                        <th>CreatedBy</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<div id="RewardPrizeModal">
    <div class="md-content">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Status:</label>
            <div class="col-sm-8">
                <input type="radio" value="0" class="valign-center" checked /> <span class="valign-center">In-active</span>
                <input type="radio" value="1" class="valign-center" /> <span class="valign-center">Active</span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Item Code:</label>
            <div class="col-sm-8">
                <input id="txtItemCode" type="text" maxlength="10" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Category:</label>
            <div class="col-sm-8">
                <select id="ddlCategory" class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Product Description:</label>
            <div class="col-sm-8">
                <input id="txtProductDescription" type="text" maxlength="10" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Product Photo:</label>
            <div class="col-sm-8">
                <input type="file" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Reward Points Required:</label>
            <div class="col-sm-8">
                <input id="txtphoto" type="text" maxlength="13" class="form-control point1 align-right">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Valid Till:</label>
            <div class="col-sm-8">
                <input id="txtValidTill" type="text" readonly class="form-control align-center">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Details:</label>
            <div class="col-sm-8">
                <input id="txtDetails" type="text" maxlength="10" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">D-Link Unit Cost:<br /><span style="font-size:11px">(local Currency)</span></label>
            <div class="col-sm-8">
                <input id="txtUnitCost" type="text" maxlength="10" class="form-control point2 align-right">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name of Supplier:</label>
            <div class="col-sm-8">
                <input id="txtSupplierName" type="text" maxlength="10" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Quotation:</label>
            <div class="col-sm-8">
                <input type="file" class="form-control">
            </div>
        </div>
        <div id="divSave" class="form-group row div-centerbtn">
            <div class="col-sm-3">
                <button type="button" id="btnSave" onclick="ProductCategorySave();" class="btn btn-block btn-grd-info"><span id="btnSaveText">Save</span></button>
            </div>
        </div>
    </div>
</div>

<input id="HMode" type="hidden" />
<input id="HGetProductCategory" type="hidden" value="@Url.Action("GetProductCategory", "api/ProductCategoryApi")" />
<input id="HGetRewardPrize" type="hidden" value="@Url.Action("GetRewardPrize", "api/RewardApi")" />
<input id="HRewardPrizeCUD" type="hidden" value="@Url.Action("RewardPrize_CUD", "api/RewardApi")" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/reward.js?v=3")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            RewardPrizeLoad();
        });
    </script>
}
