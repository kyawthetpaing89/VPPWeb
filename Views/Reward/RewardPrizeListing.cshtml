
@{
    ViewBag.Title = "RewardPrizeListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Reward Prize Listing</h5>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <button type="button" id="btnNew" onclick="AddNewPrize();" class="btn btn-block btn-grd-info"><i class="ion-plus-round"></i> Add Reward Prize</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblReward" class="table table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Item Code</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Product</th>
                                        <th>Reward Points Require</th>
                                        <th>Valid Till</th>
                                        <th>Details</th>
                                        <th>Unit Cost</th>
                                        <th>Suppiler</th>
                                        <th>Creation Date</th>
                                        <th>Quotation</th>
                                        <th>CreatedBy</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<div id="RewardPrizeModal">
    <div class="md-content">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Category Name:</label>
            <div class="col-sm-8">
                <input id="txtCategoryName" maxlength="50" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Order Sequence:</label>
            <div class="col-sm-8">
                <input id="txtOrder" type="text" maxlength="2" class="form-control point1 align-right">
            </div>
        </div>
        <div id="divSave" class="form-group row div-centerbtn">
            <div class="col-sm-3">
                <button type="button" id="btnSave" onclick="ProductCategorySave();" class="btn btn-block btn-grd-info"><span id="btnSaveText">Save</span></button>
            </div>
        </div>
    </div>
</div>

<input id="HMode" type="hidden" />
<input id="HGetRewardPrize" type="hidden" value="@Url.Action("GetRewardPrize", "api/RewardApi")" />
<input id="HRewardPrizeCUD" type="hidden" value="@Url.Action("RewardPrize_CUD", "api/RewardApi")" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/reward.js?v=1")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            RewardPrizeLoad();
        });
    </script>
}
