
@{
    ViewBag.Title = "PromotionListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Promotion List</h5>
                    </div>
                    <div class="card-block">
                        <div class="card searchcard" id="AdvanceSearch">
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-sm-4">
                                        <label class=" col-form-label">Title:</label>
                                        <input id="STitle" type="search" maxlength="200" class="form-control form-control-sm">
                                    </div>
                                    <div class="col-sm-2">
                                        <label class=" col-form-label">Status:</label>
                                        <select id="SStatus" class="form-control form-control-sm">
                                            <option value="">All</option>
                                            <option value="1">Active</option>
                                            <option value="0">In-active</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-2">
                                        <label class=" col-form-label">Country:</label>
                                        <select id="SCountry" class="form-control form-control-sm">
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer searchfooter div-centerbtn">
                                <btn id="btnSearchPromotionClear" class="btn btn-sm searchclearbtn"><i class="icofont icofont-delete"></i> Clear</btn>
                                <btn id="btnSearchPromotion" class="btn btn-sm searchbtn"><i class="ion-ios-search-strong"></i> Search</btn>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblPromotion" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Status</th>
                                        <th>Country</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Upload Date</th>
                                        <th>Image</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<div id="PromotionModal">
    <div class="md-content">
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Status:</label>
            <div class="col-sm-8">
                <div class="form-radio">
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoInactive" type="radio" name="rdoStatus" value="0" checked>
                            <i class="helper"></i>In-active
                        </label>
                    </div>
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoActive" type="radio" name="rdoStatus" value="1">
                            <i class="helper"></i>Active
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Promotion Code:</label>
            <div class="col-sm-4">
                <input id="txtPromotionCode" readonly type="text" maxlength="10" class="form-control form-control-sm">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Upload By:</label>
            <div class="col-sm-4">
                <input id="txtUploadBy" readonly type="text" maxlength="10" class="form-control form-control-sm">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Country:</label>
            <div id="divCheckBoxList" class="col-sm-9">
                <div class="col-sm-12 checkbox-fade fade-in-primary" style="padding:0">
                    <label>
                        <input type="checkbox" id="chkAll" name="Language" value="HTML" class="input-danger">
                        <span class="cr">
                            <i class="cr-icon icofont icofont-ui-check txt-primary"></i>
                        </span>
                        <span>All</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Upload Date:</label>
            <div class="col-sm-2">
                <select class="form-control form-control-sm" id="uploadmonth">
                    <option value="01">Jan</option>
                    <option value="02">Feb</option>
                    <option value="03">Mar</option>
                    <option value="04">Apr</option>
                    <option value="05">May</option>
                    <option value="06">Jun</option>
                    <option value="07">Jul</option>
                    <option value="08">Aug</option>
                    <option value="09">Sep</option>
                    <option value="10">Oct</option>
                    <option value="11">Nov</option>
                    <option value="12">Dec</option>
                </select>
            </div>
            <div class="col-sm-2">
                <select class="form-control form-control-sm" id="uploadyear">
                    <option value="2012">2012</option>
                    <option value="2013">2013</option>
                    <option value="2014">2014</option>
                    <option value="2015">2015</option>
                    <option value="2016">2016</option>
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                    <option value="2022">2022</option>
                    <option value="2023">2023</option>
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                    <option value="2026">2026</option>
                    <option value="2027">2027</option>
                    <option value="2028">2028</option>
                    <option value="2029">2029</option>
                    <option value="2030">2030</option>
                    <option value="2031">2031</option>
                    <option value="2032">2032</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Promotion Image:</label>
            <div id="divPromotionImage" class="col-sm-9">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Title:</label>
            <div class="col-sm-9">
                <input id="txtTitle" type="text" maxlength="200" class="form-control form-control-sm ">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Description:</label>
            <div class="col-sm-9">
                <input id="txtDescription" type="text" maxlength="200" class="form-control form-control-sm" />
            </div>
        </div>
        <div id="divSave" class="form-group row div-centerbtn">
            <div class="col-sm-3">
                <button type="button" id="btnPromotionClose" class="btn btn-block btn-grd-inverse">Close</button>
            </div>
            <div class="col-sm-3">
                <button type="button" id="btnPromotionSave" class="btn btn-block btn-grd-info"><span id="btnSaveText">Save</span></button>
            </div>
        </div>
    </div>
</div>

<input id="HGetCountry" type="hidden" value="@Url.Action("GetCountry", "api/CountryApi")" />
<input id="HGetPromotion" type="hidden" value="@Url.Action("GetPromotion", "api/PromotionApi")" />
<input id="HPromotionCUD" type="hidden" value="@Url.Action("Promotion_CUD", "Promotion")" />
<input type="hidden" id="HMode" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/promotion.js?v=1")"></script>
    <script src="@Url.Content("~/Scripts/fileupload.js?v=3")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            PromotionLoad();
        });
    </script>
}