
@{
    ViewBag.Title = "TrainingTypeListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Training Type Listing</h5>
                    </div>
                    <div class="card-block">
                        <div class="row" style="padding-bottom:5px;">
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <label col-form-label">Name:</label>
                            </div>
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <input type="text" id="STrainingTypeName" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Status:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <select id="SStatus" class="form-control">
                                    <option value="">All</option>
                                    <option value="0">In-active</option>
                                    <option value="1">Active</option>
                                </select>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <button type="button" id="btnSearch" onclick="BindTrainingType();" class="btn btn-block btn-grd-info"><i class="icon-magnifier"></i> Search</button>
                            </div>
                        </div>
                        <div class="row" style="padding-bottom:5px;">
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <button type="button" id="btnNewTrainingType" onclick="AddTrainingType();" class="btn btn-block btn-grd-info"><i class="ion-plus-round"></i> Add Training Type</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblTrainingType" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Status</th>
                                        <th>Name</th>
                                        <th>Creation Date</th>
                                        <th>CreatedBy</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<div id="TrainingTypeModal">
    <div class="md-content">
        <div class="form-group row">
            <label class="col-sm-3">Status:</label>
            <div class="col-sm-9">
                <div class="form-radio">
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoInactive" type="radio" name="rdoStatus" value="0" checked>
                            <i class="helper"></i>In-active
                        </label>
                    </div>
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoActive" type="radio" name="rdoStatus" value="1">
                            <i class="helper"></i>Active
                        </label>
                    </div>
                </div>
                <span class="messages"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Name:</label>
            <div class="col-sm-9">
                <input id="txtTrainingTypeName" type="text" maxlength="50" class="form-control">
            </div>
        </div>
        <div id="divSave" class="form-group row div-centerbtn">
            <div class="col-sm-3">
                <button type="button" id="btnClose" onclick="TrainingTypeEntryClose();" class="btn btn-block btn-grd-inverse">Close</button>
            </div>
            <div class="col-sm-3">
                <button type="button" id="btnSave" onclick="TrainingTypeSave();" class="btn btn-block btn-grd-info"><span id="btnSaveText">Save</span></button>
            </div>
        </div>
    </div>
</div>

<input id="HMode" type="hidden" />
<input id="HTrainingTypeID" type="hidden" />
<input id="HGetTrainingType" type="hidden" value="@Url.Action("GetTrainingType", "api/TrainingApi")" />
<input id="HTrainingTypeCUD" type="hidden" value="@Url.Action("TrainingType_CUD", "api/TrainingApi")" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/training.js?v=1")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            TrainingTypeListingLoad();
        });
    </script>
}
