
@{
    ViewBag.Title = "TrainingListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Training Listing</h5>
                    </div>
                    <div class="card-block">
                        <div class="row" style="padding-bottom:5px">
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Training Name:</label>
                            </div>
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <input type="text" id="STrainingName" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Country:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <select id="ddlSCountry" class="form-control"></select>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <label col-form-label">Training Environment:</label>
                            </div>
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <select id="STrainingEnvironment" class="form-control">
                                    <option value="">All</option>
                                    <option value="1">Online</option>
                                    <option value="2">Classroom</option>
                                </select>
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Training Type:</label>
                            </div>
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <select id="ddlSTrainingType" class="form-control"></select>
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Date From:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <input type="text" id="STrainingDateFrom" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Date To:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <input type="text" id="STrainingDateTo" class="form-control" />
                            </div>                        
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Status:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <select id="SStatus" class="form-control">
                                    <option value="">All</option>
                                    <option value="0">In-active</option>
                                    <option value="1">Active</option>
                                </select>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <button type="button" id="btnSearch" onclick="BindTrainingListing();" class="btn btn-block btn-grd-info"><i class="icon-magnifier"></i> Search</button>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <button type="button" id="btnClearSearch" onclick="ClearTrainingSearch();" class="btn btn-block btn-grd-inverse"><i class="icon-close"></i> Clear</button>
                            </div>
                        </div>
                        <div class="form-group row div-centerbtn">
                            
                        </div>
                        <div class="row" style="padding-bottom:5px;padding-top:5px;border-top:dashed 1px black">
                            <div class="col-sm-12 col-lg-3 col-md-3">
                                <button type="button" id="btnNew" onclick="AddNewTraining();" class="btn btn-block btn-grd-info"><i class="ion-plus-round"></i> Add Training</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblTraining" class="table table-striped table-bordered" style="width:130%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Status</th>
                                        <th>Training Type</th>
                                        <th>Country Name</th>
                                        <th>Training Name</th>
                                        <th>Training Environment</th>
                                        <th>Available<br />Places</th>
                                        @*<th>Description</th>*@
                                        <th>Training Date</th>
                                        <th>Created Date</th>
                                        <th>Created By</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<div id="TrainingModal">
    <div class="md-content">
        <div class="form-group row">
            <label class="col-sm-3">Status:</label>
            <div class="col-sm-9">
                <div class="form-radio">
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoInactive" type="radio" name="rdoStatus" value="0" checked>
                            <i class="helper"></i>In-active
                        </label>
                    </div>
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoActive" type="radio" name="rdoStatus" value="1">
                            <i class="helper"></i>Active
                        </label>
                    </div>
                </div>
                <span class="messages"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Name:</label>
            <div class="col-sm-9">
                <input id="txtTrainingName" type="text" maxlength="200" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Type:</label>
            <div class="col-sm-9">
                <select id="ddlTrainingType" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Country:</label>
            <div class="col-sm-9">
                <select id="ddlCountry" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3">Environment:</label>
            <div class="col-sm-9">
                <div class="form-radio">
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoOnline" type="radio" name="rdoEnvironment" value="1" checked>
                            <i class="helper"></i>Online
                        </label>
                    </div>
                    <div class="radio radiofill radio-primary radio-inline">
                        <label>
                            <input id="rdoClassroom" type="radio" name="rdoEnvironment" value="2">
                            <i class="helper"></i>Classroom
                        </label>
                    </div>
                </div>
                <span class="messages"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Venue:</label>
            <div class="col-sm-9">
                <input id="txtTrainingVenue" readonly type="text" maxlength="100" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Available Places:</label>
            <div class="col-sm-3">
                <input id="txtPlaces" type="text" maxlength="4" class="form-control place1 align-right">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Training Date:</label>
            <div class="col-sm-3">
                <input id="txtTrainingDate" maxlength="10" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-9">
                <textarea id="txtDescription" maxlength="400" class="form-control"></textarea>
            </div>
        </div>
        <div id="divSave" class="form-group row div-centerbtn">
            <div class="col-sm-3">
                <button type="button" id="btnClose" onclick="TrainingEntryClose();" class="btn btn-block btn-grd-inverse">Close</button>
            </div>
            <div class="col-sm-3">
                <button type="button" id="btnSave" onclick="TrainingSave();" class="btn btn-block btn-grd-info"><span id="btnSaveText">Save</span></button>
            </div>
        </div>
    </div>
</div>

<input id="HMode" type="hidden" />
<input id="HTrainingID" type="hidden" />
<input id="HGetCountry" type="hidden" value="@Url.Action("GetCountry", "api/CountryApi")" />
<input id="HTrainingCUD" type="hidden" value="@Url.Action("Training_CUD", "api/TrainingApi")" />
<input id="HGetTraining" type="hidden" value="@Url.Action("GetTraining", "api/TrainingApi")" />
<input id="HGetTrainingType" type="hidden" value="@Url.Action("GetTrainingType", "api/TrainingApi")" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/training.js?v=1")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            TrainingListingLoad();
        });
    </script>
}
