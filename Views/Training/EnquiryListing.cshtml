
@{
    ViewBag.Title = "EnquiryListing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <!-- Page body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Basic Form Inputs card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Enquiry Listing</h5>
                    </div>
                    <div class="card-block">
                        <div class="row" style="padding-bottom:5px;">
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Email:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <input type="text" id="SEmail" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Full Name:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <input type="text" id="SFullName" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Date From:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <input type="text" id="SDateFrom" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Date To:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <input type="text" id="SDateTo" class="form-control" />
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label">Status:</label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <select id="SStatus" class="form-control">
                                    <option value="">All</option>
                                    <option value="1">New</option>
                                    <option value="2">Read</option>
                                </select>
                            </div>
                            <div class="col-sm-12 col-lg-1 col-md-1">
                                <label col-form-label"></label>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <button type="button" id="btnSearch" onclick="BindEnquiry();" class="btn btn-block btn-grd-info"><i class="icon-magnifier"></i> Search</button>
                            </div>
                            <div class="col-sm-12 col-lg-2 col-md-2">
                                <button type="button" id="btnClearSearch" onclick="ClearEnquirySearch();" class="btn btn-block btn-grd-inverse"><i class="icon-close"></i> Clear</button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="tblEnquiry" class="table table-striped table-bordered widepadding" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Full Name</th>
                                        <th>Enquiry</th>
                                        <th>Enquiry Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Page body end -->
</div>

<input id="HGetEnquiry" type="hidden" value="@Url.Action("GetEnquiry", "api/TrainingApi")" />

@section Scripts{
    <script src="@Url.Content("~/Scripts/enquiry.js?v=1")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            enquirylistingload();
        });
    </script>
}
